{
	"name": "@redplanethq/corebrain",
	"version": "1.0.0",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"bin": {
		"corebrain": "dist/cli.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"author": "RedPlanetHQ",
	"scripts": {
		"build": "tsc && tsc-alias && chmod +x dist/cli.js",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@mishieck/ink-titled-box": "^0.4.2",
		"@redplanethq/sdk": "workspace:*",
		"dotenv": "^17.2.3",
		"ink": "^6.6.0",
		"pastel": "^4.0.0",
		"react": "^19.2.4",
		"zod": "^4.3.6",
		"zod-to-json-schema": "^3.25.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.1.0",
		"@types/node": "18",
		"@types/react": "^19.2.13",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.0.3",
		"xo": "^1.2.3"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
