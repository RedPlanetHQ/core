# Server
PORT=3001
NODE_ENV=development

# CORE Integration
CORE_MCP_SERVER_URL=http://localhost:3000/api/v1/mcp
CORE_WEBAPP_URL=http://localhost:3000
ENCRYPTION_KEY=your-encryption-key-must-match-core-webapp
APP_ORIGIN=http://localhost:3001

# AI Model (choose one provider)
MODEL=gpt-4o
# For OpenAI
OPENAI_API_KEY=sk-your-openai-key
# For Anthropic
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# For Google
# GOOGLE_GENERATIVE_AI_API_KEY=your-google-key

# Database (shared with CORE)
DATABASE_URL=postgresql://user:password@localhost:5432/core

# Redis (shared with CORE)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS_DISABLED=true

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Email (Resend)
EMAIL_TRANSPORT=resend
RESEND_API_KEY=re_your_api_key
FROM_EMAIL=agent@example.com

# Authentication
VERIFICATION_LINK_EXPIRY_MINUTES=30
